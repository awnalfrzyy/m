@model diggie_server.src.shared.email.models.OtpEmailViewModel
@{
    Layout = null;
    var year = DateTime.UtcNow.Year;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@Model.AppName — Verify Your Email</title>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Unbounded:wght@400;700;900&display=swap');

        /* Reset */
        body, table, td, p, a, li, blockquote {
            -webkit-text-size-adjust: 100%;
            -ms-text-size-adjust: 100%;
        }
        table, td {
            mso-table-lspace: 0pt;
            mso-table-rspace: 0pt;
        }
        img {
            border: 0;
            outline: none;
            text-decoration: none;
            -ms-interpolation-mode: bicubic;
        }

        /* Responsive */
        @@media only screen and (max-width: 620px) {
            .email-wrapper {
                padding: 20px 0 !important;
            }
            .email-container {
                width: 100% !important;
                border-left: none !important;
                border-right: none !important;
            }
            .header-cell {
                padding: 18px 20px !important;
            }
            .app-name {
                font-size: 18px !important;
            }
            .badge {
                font-size: 8px !important;
                letter-spacing: 2px !important;
                padding: 3px 6px !important;
            }
            .content-cell {
                padding: 24px 20px 0 20px !important;
            }
            .headline {
                font-size: 20px !important;
            }
            .body-text {
                font-size: 12px !important;
            }
            .otp-wrap {
                padding: 20px 20px !important;
            }
            .otp-side {
                display: none !important;
                width: 0 !important;
                overflow: hidden !important;
                padding: 0 !important;
                border: none !important;
            }
            .otp-code {
                font-size: 34px !important;
                letter-spacing: 8px !important;
                padding: 24px 10px !important;
            }
            .warn-cell {
                padding: 0 20px 24px 20px !important;
            }
            .warn-text {
                font-size: 10px !important;
            }
            .footer-cell {
                padding: 16px 20px !important;
            }
            .footer-text {
                font-size: 9px !important;
            }
            .footer-right {
                display: block !important;
                text-align: left !important;
                padding-left: 0 !important;
                padding-top: 6px !important;
            }
        }
    </style>
</head>
<body style="margin:0;padding:0;background:#f0f0f0;font-family:'Space Mono',Courier,monospace;">

<table class="email-wrapper" width="100%" cellpadding="0" cellspacing="0" border="0"
       style="background:#f0f0f0;padding:50px 16px;">
<tr>
<td align="center">

    <!-- OUTER WRAPPER -->
    <table class="email-container" width="600" cellpadding="0" cellspacing="0" border="0"
           style="width:600px;max-width:600px;border:2px solid #000;background:#fff;">

        <!-- ░░ HEADER ░░ -->
        <tr>
            <td class="header-cell" style="background:#000;padding:22px 36px;">
                <table width="100%" cellpadding="0" cellspacing="0" border="0">
                    <tr>
                        <td>
                            <span class="app-name"
                                  style="font-family:'Unbounded',sans-serif;font-size:22px;font-weight:900;color:#fff;letter-spacing:-0.5px;">
                                @Model.AppName
                            </span>
                        </td>
                        <td align="right" style="vertical-align:middle;">
                            <span class="badge"
                                  style="font-family:'Space Mono',monospace;font-size:9px;font-weight:700;color:#fff;letter-spacing:3px;text-transform:uppercase;border:1px solid rgba(255,255,255,0.35);padding:4px 8px;white-space:nowrap;">
                                VERIFY / EMAIL
                            </span>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

        <!-- ░░ SPLIT RULE ░░ -->
        <tr>
            <td style="padding:0;line-height:0;font-size:0;">
                <table width="100%" cellpadding="0" cellspacing="0" border="0">
                    <tr>
                        <td width="50%" style="height:4px;background:#000;font-size:0;line-height:0;">&nbsp;</td>
                        <td width="50%" style="height:4px;background:#fff;border-top:2px solid #000;font-size:0;line-height:0;">&nbsp;</td>
                    </tr>
                </table>
            </td>
        </tr>

        <!-- ░░ INTRO ░░ -->
        <tr>
            <td class="content-cell" style="padding:36px 36px 0 36px;">
                <p style="margin:0 0 6px 0;font-family:'Space Mono',monospace;font-size:10px;font-weight:700;letter-spacing:3px;color:#999;text-transform:uppercase;">
                    Incoming Verification
                </p>
                <p class="headline"
                   style="margin:0 0 22px 0;font-family:'Unbounded',sans-serif;font-size:26px;font-weight:900;color:#000;line-height:1.2;letter-spacing:-1px;">
                    Confirm it's<br/>really you.
                </p>
                <p class="body-text"
                   style="margin:0;font-family:'Space Mono',monospace;font-size:13px;line-height:1.8;color:#333;border-left:3px solid #000;padding-left:14px;">
                    Hey <strong>@Model.Name</strong> — use the code below to verify your email.
                    Valid for <strong>@Model.ExpiredMinutes min</strong>. Don't share it with anyone.
                </p>
            </td>
        </tr>

        <!-- ░░ OTP BLOCK ░░ -->
        <tr>
            <td class="otp-wrap" style="padding:28px 36px;">
                <table width="100%" cellpadding="0" cellspacing="0" border="0"
                       style="border:2px solid #000;background:#000;">
                    <tr>
                        <!-- LEFT LABEL — hidden on mobile -->
                        <td class="otp-side"
                            width="80"
                            style="border-right:2px solid #333;padding:22px 0;vertical-align:middle;">
                            <p style="margin:0;font-family:'Space Mono',monospace;font-size:8px;font-weight:700;color:#666;letter-spacing:2px;text-align:center;text-transform:uppercase;">
                                OTP<br/>CODE
                            </p>
                        </td>
                        <!-- CODE CENTER -->
                        <td class="otp-code" align="center"
                            style="padding:28px 16px;font-family:'Unbounded',sans-serif;font-size:44px;font-weight:900;letter-spacing:12px;color:#fff;">
                            @Model.OtpCode
                        </td>
                        <!-- RIGHT TIMER — hidden on mobile -->
                        <td class="otp-side"
                            width="80"
                            style="border-left:2px solid #333;padding:22px 0;vertical-align:middle;">
                            <p style="margin:0;font-family:'Space Mono',monospace;font-size:8px;font-weight:700;color:#666;letter-spacing:2px;text-align:center;text-transform:uppercase;">
                                EXP<br/>@Model.ExpiredMinutes MIN
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

        <!-- ░░ WARNING ░░ -->
        <tr>
            <td class="warn-cell" style="padding:0 36px 28px 36px;">
                <table width="100%" cellpadding="0" cellspacing="0" border="0"
                       style="border:2px solid #000;background:#fff;">
                    <tr>
                        <td width="5" style="background:#000;font-size:0;line-height:0;">&nbsp;</td>
                        <td class="warn-text"
                            style="padding:12px 14px;font-family:'Space Mono',monospace;font-size:11px;color:#000;line-height:1.7;">
                            ⚠&nbsp; Do <strong>NOT</strong> share this code.
                            <strong>@Model.AppName</strong> will never ask for it via phone or chat.
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

        <!-- ░░ FOOTER ░░ -->
        <tr>
            <td class="footer-cell" style="border-top:2px solid #000;background:#000;padding:18px 36px;">
                <table width="100%" cellpadding="0" cellspacing="0" border="0">
                    <tr>
                        <td class="footer-text"
                            style="font-family:'Space Mono',monospace;font-size:10px;color:#888;line-height:1.6;">
                            Didn't request this? Ignore — your account is safe.
                        </td>
                        <td class="footer-right footer-text" align="right"
                            style="font-family:'Space Mono',monospace;font-size:10px;color:#555;white-space:nowrap;padding-left:16px;">
                            © @year @Model.AppName
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

    </table>

</td>
</tr>
</table>

</body>
</html>